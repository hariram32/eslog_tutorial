              "type": "keyword",
              "norms": false
            },
            "country_name": {
              "type": "keyword",
              "norms": false
            },
            "ip": {
              "type": "ip"
            },
            "latitude": {
              "type": "float"
            },
            "location": {
              "type": "geo_point"
            },
            "longitude": {
              "type": "float"
            },
            "postal_code": {
              "type": "keyword",
              "norms": false
            },
            "region_code": {
              "type": "keyword",
              "norms": false
            },
            "region_name": {
              "type": "keyword",
              "norms": false
            },
            "timezone": {
              "type": "keyword",
              "norms": false
            }
          }
        },
        "category": {
          "type": "keyword",
          "norms": false
